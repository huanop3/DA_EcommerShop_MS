@code {
    [Parameter]
    public int Id { get; set; }

    private int Quantity { get; set; } = 1;
    private int SelectedImageIndex { get; set; } = 0;
    private int ActiveTabIndex { get; set; } = 0;
    private string[] ImageUrls = new[] {
"images/product-detail/main-product.jpg",
"images/product-detail/thumb-2.jpg",
"images/product-detail/thumb-3.jpg",
"images/product-detail/thumb-4.jpg",
};

    private void IncreaseQuantity()
    {
        Quantity++;
    }

    private void DecreaseQuantity()
    {
        if (Quantity > 1)
            Quantity--;
    }

    private void SelectImage(int index)
    {
        SelectedImageIndex = index;
    }

    private void SelectTab(int index)
    {
        ActiveTabIndex = index;
    }

    private void AddToCart()
    {
        // Add to cart logic here
        Console.WriteLine($"Added {Quantity} of product {Id} to cart");
    }
}

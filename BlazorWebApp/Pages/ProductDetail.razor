@page "/product-detail"
@page "/product/{id:int}"

<PageTitle>Product Detail - Grocery Shop</PageTitle>

<link href="css/product-detail.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<div class="product-contaiber">
    <div class="border-container">
    <div class="breadcrumb">
        <div class="container">
            <a href="/">Home</a> / <a href="/products">Products</a> / <span>Product Details</span>
        </div>
    </div>
</div>


<section class="product-detail-section">
    <div class="container">
        <div class="product-detail-container">
            <div class="product-images">
                <div class="main-image">
                    <img src="@ImageUrls[SelectedImageIndex]" alt="Product Image" />
                </div>
                <div class="thumbnail-images">
                    @for (int i = 0; i < ImageUrls.Length; i++)
                    {
                        var index = i;
                        <div class="thumbnail @(SelectedImageIndex == index ? "active" : "")"
                            @onclick="() => SelectImage(index)">
                            <img src="@ImageUrls[i]" alt="Thumbnail @(i + 1)" />
                        </div>
                    }
                </div>
            </div>

            <div class="product-info1">
                <h1 class="product-title">Potato Chips 52g, American Cream & Onion Flavour, Crunchy Chips & Snacks.</h1>

                <div class="product-ratings">
                    <div class="stars">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="far fa-star"></i>
                    </div>
                    <span class="rating-count">| 992 Ratings</span>
                </div>

                <div class="product-details-grid">
                    <div class="details-column">
                        <div class="price-row">
                            <h2 class="current-price">$664.00</h2>
                            <span class="discount-badge">-78%</span>
                        </div>
                        <div class="mrp-row">
                            <span>M.R.P. : </span>
                            <span class="old-price">$2,999.00</span>
                        </div>
                    </div>
                    <div class="details-column">
                        <div class="sku-row">
                            <span class="label">SKU#:</span>
                            <span class="value">WH12</span>
                        </div>
                        <div class="stock-status">
                            <span class="in-stock">IN STOCK</span>
                        </div>
                    </div>
                </div>

                <div class="product-description">
                    <p>Lorem ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been
                        the industry's standard dummy text ever since the 1990.</p>
                </div>

                <div class="product-specs">
                    <ul>
                        <li><span class="spec-label">Closure :</span> Hook & Loop</li>
                        <li><span class="spec-label">Sole :</span> Polyvinyl Chloride</li>
                        <li><span class="spec-label">Width :</span> Medium</li>
                        <li><span class="spec-label">Outer Material :</span> A-Grade Standard Quality</li>
                    </ul>
                </div>

                <div class="product-options">
                    <h3>WEIGHT</h3>
                    <div class="weight-options">
                        <button class="weight-option active">250g</button>
                        <button class="weight-option">500g</button>
                        <button class="weight-option">1kg</button>
                        <button class="weight-option">2kg</button>
                    </div>
                </div>

                <div class="add-to-cart-section">
                    <div class="quantity-selector">
                        <button class="qty-btn" @onclick="DecreaseQuantity">-</button>
                        <input type="text" readonly value="@Quantity" />
                        <button class="qty-btn" @onclick="IncreaseQuantity">+</button>
                    </div>

                    <button class="add-to-cart-btn" @onclick="AddToCart">
                        ADD TO CART
                    </button>

                    <button class="wishlist-btn">
                        <i class="far fa-heart"></i>
                    </button>

                    <button class="view-btn">
                        <i class="far fa-eye"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="product-tabs">
            <div class="tab-header">
                <button class="tab-btn active" @onclick="() => SelectTab(0)">Description</button>
                <button class="tab-btn" @onclick="() => SelectTab(1)">Additional Information</button>
                <button class="tab-btn" @onclick="() => SelectTab(2)">Reviews (3)</button>
            </div>
            <div class="tab-content">
                <div class="tab-pane @(ActiveTabIndex == 0 ? "active" : "")">
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas fermentum, diam non iaculis
